<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="tw.fatminmin.xposed.minminlock" android:versionCode="5" android:versionName="2.0">

    <uses-sdk
        tools:node="replace" />

    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />

    <application android:allowBackup="true" android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" android:theme="@style/AppTheme">
        <activity android:name="tw.fatminmin.xposed.minminlock.ui.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="tw.fatminmin.xposed.minminlock.ui.LockActivity"
            android:exported="true" android:excludeFromRecents="true" />

        <meta-data android:name="xposedmodule" android:value="true" />
        <meta-data android:name="xposeddescription" android:value="MinMinLock" />
        <meta-data android:name="xposedminversion" android:value="54" />
    </application>

</manifest>
