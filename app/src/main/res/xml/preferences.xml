<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:key="main">
    <PreferenceCategory android:title="@string/pref_category_password">
        <PreferenceScreen android:title="@string/pref_lock_type">
            <Preference
                android:key="lock_type_password"
                android:title="@string/lock_type_password" />
            <Preference
                android:key="lock_type_pin"
                android:title="@string/lock_type_pin" />
            <Preference
                android:key="lock_type_knock_code"
                android:title="@string/lock_type_knockcode" />
            <PreferenceCategory android:title="@string/options">
                <PreferenceScreen android:title="@string/pref_knockcode_ui_options">
                    <CheckBoxPreference
                        android:defaultValue="false"
                        android:key="kc_hide_dividers"
                        android:title="@string/pref_kc_hide_dividers" />
                    <CheckBoxPreference
                        android:defaultValue="false"
                        android:key="kc_no_highlight"
                        android:title="@string/pref_kc_no_highlight" />
                </PreferenceScreen>
            </PreferenceCategory>
        </PreferenceScreen>
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_category_apps">
        <CheckBoxPreference
            android:key="show_system_apps"
            android:summaryOff="@string/pref_show_system_app_summary_off"
            android:summaryOn="@string/pref_show_system_app_summary_on"
            android:title="@string/pref_show_system_app" />

        <Preference
            android:key="choose_apps"
            android:summary="@string/choose_apps_summary"
            android:title="@string/choose_apps" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_category_ui">
        <!--<CheckBoxPreference
            android:defaultValue="false"
            android:key="hide_from_launcher"
            android:title="@string/pref_hide_from_launcher" />-->

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="use_dark_style"
            android:title="@string/pref_use_dark_style" />

    </PreferenceCategory>

</PreferenceScreen>